{

  "Config": {
    "Confirmation": "d00c6d7b", //Confiramtion от CallbackApi
    "AntiSpam": 10, //Максимальное количество сообщений до блокировки пользователя, если он не зарегистрирован (Анти-спам функция)
    "GMT": "3" //Добавление к часовому поясу клиента (в часах)
  },

  "ConnectionToApi": {
    "AccessToken": "", //Сюда заводить AccesToken от CallbackApi
    "EnvironmentAT": "AccessToken", //Название переменной окружения в которой хранится AccessToken
    "TakeATFromConfig": "false" //Откуда получать AccessToken, true/false. Если true - то из параметра AccessToken, иначе - из параметра окружения
  },

  "ConnectionToDatabase": {
    "TakeCSFromConfig": "false", //Откуда получать строку подключения, значения - true/false. Если установлено true, берёт строку из конфигов. Иначе - из параметров окружения (Параметр с названием EnvironmentCS)
    "EnvironmentCS": "EnvironmentCS", //Название переменной окружения для получения строки подключения
    "ConnectionString": "Host=hosturl; Port = 5432; User Id = username; Password = pass; Database = dbname; sslmode=Require; Trust Server Certificate=true;" //Строка подключения к БД, вид подключения (Конфиг/переменная среды) настраивается в ConnectToDB.cs
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
